<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">TV Series</th>
      <th scope="col">Genre</th>
      <th scope="col">No of seasons</th>
      <th scope="col">Date of First Release</th>
      <th scope="col">Director</th>
      <th scope="col">Actor Names</th>
      <th scope="col">Ratings</th>
    </tr>
  </thead>
  <tbody>
    <% @series.each do |ser| %> 
      <tr>
        <th scope="row"><%= ser.id %></th>
        <td><%= ser.name %></td>
        <td><%= ser.genre %></td>
        <td><%= ser.no_of_seasons %></td>
        <td><%= ser.date_of_first_release %></td>
        <td><%= ser.director %></td>
        <td><%= ser.actor_names %></td>
        <td><%= ser.ratings %></td>
      </tr>
    <% end %>
  </tbody>
</table>
